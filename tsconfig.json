{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2016",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "outDir": "build",
      "types": [
        "node",
        "reflect-metadata"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
      "node_modules"
    ]
}